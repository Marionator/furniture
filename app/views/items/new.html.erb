<h1 class='title_1 pt-4 pb-4'>Add a new item</h1>

<div class = "container">

<div class='form_container'>

<%= simple_form_for(@item) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.input :category, :collection => ["Chair", "Sofa", "Table", "Bed", "Desk", "Cupboard", "TV stand", "Chest of drawers", "Garden furniture", "Children furniture", "Decor", "Other"] %>
    <%= f.input :color, :collection => ["Dark wood", "Light wood", "Black", "White", "Grey", "Blue", "Brown", "Copper", "Gold", "Green", "Navy", "Neutral", "Orange", "Pink", "Red", "Silver", "Yellow", "Purple", "Multiple colors", "Other"] %>
    <%= f.input :description, hint: "Maximum 300 characters" %>
    <%= f.input :price %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :depth %>
    <%= f.input :weight %>
    <%= f.input :shipping, :collection =>["delivery to the renter", "collection from the owner", "flexible"] %>
    <%= f.button :submit, value: "Add item", class: "btn btn-outline-dark" %>
<% end %>

<div class="mt-3">
<%= link_to "Back", :back, class:'btn btn-dark' %>
</div>
</div>

</div>
