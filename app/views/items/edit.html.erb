<h1>Editing item</h1>

<%= simple_form_for(@item) do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :color %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :depth %>
    <%= f.input :weight %>
    <%= f.select :shipping, ["deliver to the renter", "ask the renter to collect", "flixable"] %>
    <%= f.submit %>
<% end %>






<div>
  <%= link_to "Show this item", @item %> |
  <%= link_to "Back to items list", items_path %>
</div>
