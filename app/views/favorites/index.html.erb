<div class="container">
  <h1 class="mt-5 mb-5">My Wish List</h1>
  <div class="row">
    <% @favorites.each do |f| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="product-card mb-5">
        <%= cl_image_tag f.item.photo.key %>
          <div class="product-card-infos">
            <div>
              <h2><%= f.item.name %></h2>
              <p class="mb-3"><%= f.item.category %></p>
              <%= link_to "learn more", item_path(f.item), class: "btn btn-dark" %>
            </div>
            <div>
            <h2 class="product-card-pricing">Â£<%= f.item.price %></h2>
            <%= link_to "<i class='fa-solid fa-trash-can'></i>".html_safe, favorite_path(f), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "card-delete" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
