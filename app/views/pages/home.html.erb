<div class="banner">
  <div class="container">
    <h1>The rental platform for furniture and homeware.</h1>
    <p class="mb-5">Buy, Swap or Return when it suits you.</p>
    <%= link_to "SHOP ALL", items_path, class: "btn-main" %>
  </div>
</div>
<div class="container">
  <h2 id="new">what's new?</h2>
  <div class="row">
    <% @most_recent_items.each do |i| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <%= link_to item_path(i) do %>
          <div class="product-card">
            <%= cl_image_tag i.photo.key %>
            <div class="product-card-infos">
              <div class="card-text">
                <h2><%= i.name %></h2>
                <p class="mb-2"><%= i.category %></p>
                <%= link_to "Learn more", item_path(i), class: "btn btn-dark" %>
              </div>
              <h2 class="product-card-pricing">Â£<%= i.price %></h2>
              </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
