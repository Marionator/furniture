<div class="container form-container">
  <div class="login-form-container">
    <div class="login-form-text w-50">
      <h2 class="align-center">Login</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="login_button w-100">
          <%= f.button :submit, "Log in", class:"btn btn-dark w-100" %>
        </div>
        <div class="shared_buttons w-100 mt-3">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    <%= image_tag "login-picture.jpg", class:'login-pic' %>
  </div>
</div>
