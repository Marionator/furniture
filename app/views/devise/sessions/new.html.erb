<h2 class="title_2">Log in</h2>


<div class = "d-flex justify-content-center main-container">

<div class = "container container-wid">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="three_buttons">
      <%= f.button :submit, "                      Log in                      ", class:"btn btn-dark btn_1" %>
    </div>

    <div class="three_buttons">
      <%= render "devise/shared/links" %>
    </div>

  <% end %>
</div>

<div class = "container container-wid">
  <img src="https://images.unsplash.com/photo-1611967164521-abae8fba4668?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1935&q=80" alt="log_in_image">
</div>

</div>
